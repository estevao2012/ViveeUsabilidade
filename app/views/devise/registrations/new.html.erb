<div class="col-sm-6">
  <div class="panel panel-default"> 
    <div class="panel-heading">
      <h3 class="panel-title">Realizar cadastro </h3>
    </div>
    <div class="panel-body">  
        <%= form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f| %>
        <%= devise_error_messages! %>
          <h2>Dados da sua conta</h2>
          <div><%= f.label :email %><br />
          <%= f.email_field :email, autofocus: true, class: "form-control"  %></div>

          <div class="form-group">
            <%= f.label :password %> <% if @validatable %><i>(<%= @minimum_password_length %> caracteres pelo menos)</i><% end %>
            <%= f.password_field :password, autocomplete: "off", class: "form-control"  %>
          </div>

          <div class="form-group">
            <%= f.label :password_confirmation %><br />
            <%= f.password_field :password_confirmation, autocomplete: "off", class: "form-control"  %>
          </div>
   
          <div class="form-group">
            <%= f.submit "Cadastrar" , class: "btn btn-success" %>
          </div>

        <% end %>
        <%= render "devise/shared/links" %>
      </div> 
    </div> 
  </div> 



