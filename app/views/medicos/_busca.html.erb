<div class="col-sm-12">
      <div class="panel panel-default"> 
        <div class="panel-heading">
          <h3 class="panel-title">Buscar médico </h3>
        </div>
        <div class="panel-body">  
          <form> 
          <%= form_for Medico.new , url: medicos_path , method: :get do |f| %>
            <div class="form-group"> 
              <%= f.label :nome, "Médico" %>
              <%= f.text_field :nome, class: "form-control" %>
            </div> 

            <div class="form-group"> 
              <%= f.label :especialidade %>
              <%= f.select :especialidade , Medico.especialidade.options, {:include_blank => ''}, class: "form-control"%>
            </div> 

            <div class="actions">  
              <%= f.submit "Buscar", class: "btn btn-success" %>
            </div>
          <% end %>
        </div>
      </div> 
    </div>